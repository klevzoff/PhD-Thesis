issn = {14200597},
journal = {Computational Geosciences},
keywords = {Counter-currentflow,Finite-volume methods,Gravity,Lock-exchange problem,Multiphase flow in porous media,Multiscale methods,Reservoir simulation},
number = {3},
pages = {337--350},
title = {{Multiscale finite-volume method for density-driven flow in porous media}},
volume = {12},
year = {2008}
